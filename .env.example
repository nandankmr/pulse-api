# Node.js TypeScript Backend Environment Variables
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
PORT=3000
APP_URL="http://localhost:3000"

# Database Configuration
# For development: postgresql://username:password@localhost:5432/database_name
# For production: postgresql://username:password@host:port/database_name?sslmode=require
DATABASE_URL="postgresql://your_username:your_password@your_host:your_port/your_database?sslmode=require"

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
MAIL_FROM="no-reply@pulse-api.com"

# Storage Configuration
USER_AVATAR_STORAGE_PATH="./storage/avatars"
ATTACHMENT_BASE_PATH="/api/attachments"

# Monitoring Configuration (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Cache Configuration
CACHE_TTL=300

# Realtime / Socket.IO Configuration
# Comma-separated origins. Use * for development wildcard.
SOCKET_CORS_ORIGINS=http://localhost:3000
# Optional Redis connection string for horizontal scaling
# SOCKET_REDIS_URL=redis://localhost:6379
REDIS_URL=redis://localhost:6379
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nYOUR_PRIVATE_KEY\\n-----END PRIVATE KEY-----"
