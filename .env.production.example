# Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
APP_URL=https://yourdomain.com

# ============================================
# DATABASE (External - Required)
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://user:password@your-db-host:5432/pulse_db?schema=public

# ============================================
# JWT CONFIGURATION (Required)
# ============================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# EMAIL/SMTP CONFIGURATION (External - Required)
# ============================================
# Use services like SendGrid, AWS SES, Mailgun, etc.
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
MAIL_FROM=noreply@yourdomain.com

# ============================================
# STORAGE CONFIGURATION
# ============================================
USER_AVATAR_STORAGE_PATH=./storage/avatars
ATTACHMENT_BASE_PATH=/api/attachments

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info

# ============================================
# API CONFIGURATION
# ============================================
API_VERSION=v1
API_PREFIX=/api

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TTL=300

# ============================================
# SOCKET.IO / REALTIME CONFIGURATION
# ============================================
# Comma-separated origins or * for all
SOCKET_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Optional: Redis for Socket.IO horizontal scaling
# SOCKET_REDIS_URL=redis://your-redis-host:6379
REDIS_URL=redis://your-redis-host:6379

# Firebase (Optional - required for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nYOUR_PRIVATE_KEY\\n-----END PRIVATE KEY-----"

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic for APM
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
